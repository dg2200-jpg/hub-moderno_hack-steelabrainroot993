<!DOCTYPE html>
// -------------------- DODGE THE GOOFY --------------------
function goofyDodge() {
let player = { x: 250, y: 350, size: 20 };
let enemy = { x: Math.random() * 500, y: 0, size: 30, speed: 3 };


document.onmousemove = (e) => {
const rect = canvas.getBoundingClientRect();
player.x = e.clientX - rect.left;
};


function loop() {
ctx.fillStyle = '#181818';
ctx.fillRect(0, 0, canvas.width, canvas.height);


ctx.fillStyle = 'cyan';
ctx.fillRect(player.x - 20, player.y - 20, 40, 40);


ctx.fillStyle = 'red';
ctx.beginPath();
ctx.arc(enemy.x, enemy.y, enemy.size, 0, Math.PI * 2);
ctx.fill();


enemy.y += enemy.speed;
if (enemy.y > 400) {
enemy.y = 0;
enemy.x = Math.random() * 500;
}


let dx = player.x - enemy.x;
let dy = player.y - enemy.y;
let dist = Math.sqrt(dx*dx + dy*dy);
if (dist < enemy.size + player.size) {
alert('You got hit by the goofyðŸ˜­');
}


gameLoop = requestAnimationFrame(loop);
}


loop();
}


// -------------------- BRAINROT CLICKER --------------------
function brainrotClicker() {
let score = 0;


canvas.onclick = () => score++;


function loop() {
ctx.fillStyle = '#181818';
ctx.fillRect(0, 0, canvas.width, canvas.height);


ctx.fillStyle = '#00ff88';
ctx.font = '40px Arial';
ctx.fillText('Score: ' + score, 150, 200);


gameLoop = requestAnimationFrame(loop);
}
loop();
}
</script>
</body>
</html>
